<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/light_gray"
            android:src="@drawable/outline_notifications_none_24"
            app:srcCompat="@drawable/outline_notifications_none_24" />

        <!-- Title -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_icon"
            android:layout_alignParentTop="true"
            android:text="Notification Title"
            android:textColor="#222"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/text_title"
            android:text="2h ago"
            android:textColor="#999"
            android:textSize="12sp" />

        <!-- Message -->
        <TextView
            android:id="@+id/text_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:layout_toEndOf="@id/image_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:text="This is a sample notification message body."
            android:textColor="#444"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Unread dot -->
        <View
            android:id="@+id/view_unread_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/text_body"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_unread_dot"
            android:visibility="gone" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
