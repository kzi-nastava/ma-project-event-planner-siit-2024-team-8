<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/asset_picture"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/profile_placeholder"
            android:layout_marginBottom="16dp"
            android:contentDescription="Asset Picture" />

        <TextView
            android:id="@+id/asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asset Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/asset_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service"
            android:textSize="18sp"
            android:textColor="#7A7A7A"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/asset_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detailed description of the service or product."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/asset_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $100"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/asset_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount: 10%"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/asset_event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Type: Conference"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/asset_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available for Booking: Yes"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/asset_visibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visible to OD: Yes"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/asset_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Duration: 2 hours"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/asset_reservation_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Deadline: 24 hours before"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/asset_cancellation_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancellation Deadline: 12 hours before"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/asset_confirmation_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmation Type: Auto"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/white"
            android:backgroundTint="@color/olive"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/white"
            android:backgroundTint="@color/olive"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
